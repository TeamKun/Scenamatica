{
  "name": "player_gamemode",
  "description": "プレイヤのゲームモードを変更します。",
  "base": "player_$base",
  "arguments": {
    "gamemode": {
      "type": "string",
      "description": "ゲームモードです。",
      "enum": [
        "SURVIVAL",
        "CREATIVE",
        "ADVENTURE",
        "SPECTATOR"
      ]
    },
    "cause": {
      "type": "string",
      "description": "ゲームモードを変更した原因です。",
      "enum": [
        "COMMAND",
        "PLUGIN",
        "DEFAULT_GAMEMODE",
        "HARDCORE_DEATH",
        "UNKNOWN"
      ]
    },
    "cancelMessage": {
      "type": "string",
      "description": "ゲームモード変更をキャンセルされたときに表示するメッセージです。"
    }
  }
}
