{
  "location": {
    "type": "object",
    "properties": {
      "x": {
        "type": "number",
        "description": "X 座標です。"
      },
      "y": {
        "type": "number",
        "description": "Y 座標です。"
      },
      "z": {
        "type": "number",
        "description": "Z 座標です。"
      },
      "yaw": {
        "type": "number",
        "description": "YAW 座標です。"
      },
      "pitch": {
        "type": "number",
        "description": "PITCH 座標です。"
      },
      "world": {
        "type": "string",
        "description": "ワールド名です。",
        "default": "world",
        "pattern": "^[a-zA-Z0-9_]+$"
      }
    },
    "required": [
      "x",
      "y",
      "z"
    ]
  },
  "blockFace": {
    "type": "string",
    "enum": [
      "UP",
      "DOWN",
      "NORTH",
      "SOUTH",
      "WEST",
      "EAST"
    ]
  },
  "block": {
    "type": "object",
    "description": "ブロックです。",
    "properties": {
      "type": {
        "type": "string",
        "description": "ブロックの種類です。"
      },
      "location": {
        "description": "ブロックの座標です。",
        "type": "location"
      },
      "metadata": {
        "type": "object",
        "description": "ブロックのメタデータです。",
        "additionalProperties": true
      },
      "light": {
        "type": "number",
        "description": "ブロックの明るさです。",
        "minimum": 0,
        "maximum": 15
      },
      "biome": {
        "$ref": "#/definitions/biome",
        "description": "ブロックのバイオームです。"
      }
    }
  },
  "vector": {
    "description": "ベクトルです。",
    "type": "location"
  },
  "projectileSource": {
    "description": "発射源です。",
    "oneOf": [
      {
        "type": "entity"
      },
      {
        "type": "block"
      },
      {
        "type": "string",
        "description": "エンティティのセレクタです。"
      }
    ]
  }
}
