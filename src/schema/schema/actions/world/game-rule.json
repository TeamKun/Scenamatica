{
  "name": "world_game_rule",
  "description": "ワールドのゲームルールを設定します",
  "base": "world_$base",
  "arguments": {
    "rule": {
      "type": "string",
      "description": "ゲームルールの名前です。",
      "enum": [
        "announceAdvancements",
        "commandBlockOutput",
        "disableElytraMovementCheck",
        "doDaylightCycle",
        "doEntityDrops",
        "doFireTick",
        "doInsomnia",
        "doLimitedCrafting",
        "doMobLoot",
        "doMobSpawning",
        "doTileDrops",
        "doWeatherCycle",
        "drowningDamage",
        "fallDamage",
        "fireDamage",
        "universalAnger",
        "disableRaids",
        "doImmediateRespawn",
        "doPatrolSpawning",
        "doTraderSpawning",
        "forgiveDeadPlayers",
        "keepInventory",
        "logAdminCommands",
        "maxCommandChainLength",
        "maxEntityCramming",
        "mobGriefing",
        "naturalRegeneration",
        "playersSleepingPercentage",
        "randomTickSpeed",
        "reducedDebugInfo",
        "sendCommandFeedback",
        "showDeathMessages",
        "spawnRadius",
        "spectatorsGenerateChunks"
