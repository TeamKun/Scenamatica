                  "CONFUSION",
                  "REGENERATION",
                  "DAMAGE_RESISTANCE",
                  "FIRE_RESISTANCE",
                  "WATER_BREATHING",
                  "INVISIBILITY",
                  "BLINDNESS",
                  "NIGHT_VISION",
                  "HUNGER",
                  "WEAKNESS",
                  "POISON",
                  "WITHER",
                  "HEALTH_BOOST",
                  "ABSORPTION",
                  "SATURATION",
                  "GLOWING",
                  "LEVITATION",
                  "LUCK",
                  "UNLUCK",
                  "SLOW_FALLING",
                  "CONDUIT_POWER",
                  "DOLPHINS_GRACE",
                  "BAD_OMEN",
                  "HERO_OF_THE_VILLAGE"
                ]
              },
              "duration": {
                "type": "number",
                "description": "ポーション効果の持続時間です。"
              },
              "amplifier": {
                "type": "number",
                "description": "ポーション効果の強さです。"
              },
              "ambient": {
                "type": "boolean",
                "description": "ポーション効果がアンビエントかどうかです。"
              },
