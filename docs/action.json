{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "title": "Scenamatica Action",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the action"
    },
    "description": {
      "type": "string",
      "description": "A description of the action"
    },
    "base": {
      "type": "string",
      "description": "The base action to use for the action"
    },
    "executable": {
      "anyOf": [
        {
          "type": "string",
          "description": "What will happen when the action is executed"
        },
        {
          "type": "boolean",
          "const": false,
          "description": "Whether the action is executable"
        }
      ]
    },
    "expectable": {
      "anyOf": [
        {
          "type": "string",
          "description": "What will happen when the action is expected"
        },
        {
          "type": "boolean",
          "const": false,
          "description": "Whether the action is expectable"
        }
      ]
    },
    "requireable": {
      "anyOf": [
        {
          "type": "string",
          "description": "What will happen when the action is required"
        },
        {
          "type": "boolean",
          "const": false,
          "description": "Whether the action is requireable"
        }
      ]
    },
    "events": {
      "type": "array",
      "description": "The events that the action can emit",
      "items": {
        "type": "string"
      }
    },
    "arguments": {
      "type": "object",
      "description": "The arguments for the action",
      "additionalProperties": true,
      "patternProperties": {
        "^[a-zA-Z0-9_]+$": {
          "type": "object",
          "properties": {
            "requiredOn": {
              "anyOf": [
                {
                  "type": "boolean"
                },
                {
                  "type": "array",
                  "items": [
                    {
                      "type": "string",
                      "enum": [
                        "execute",
                        "expect",
                        "require"
                      ]
                    }
                  ]
                }
              ]
            },
            "availableFor": {
              "type": "array",
              "items": [
                {
                  "type": "string",
                  "enum": [
                    "execute",
                    "expect",
                    "require"
                  ]
                }
              ]
            },
            "since": {
              "type": "string",
              "description": "The version of Minecraft that the argument was added in"
            },
            "until": {
              "type": "string",
              "description": "The version of Minecraft that the argument was removed in"
            }
          },
          "additionalProperties": true
        }
      }
    },
    "outputs": {
      "type": "object",
      "description": "The output of the action",
      "additionalProperties": true,
      "patternProperties": {
        "^[a-zA-Z0-9_]+$": {
          "type": "object",
          "properties": {
            "availableFor": {
              "type": "array",
              "items": [
                {
                  "type": "string",
                  "enum": [
                    "execute",
                    "expect",
                    "require"
                  ]
                }
              ]
            },
            "since": {
              "type": "string",
              "description": "The version of Minecraft that the output was added in"
            },
            "until": {
              "type": "string",
              "description": "The version of Minecraft that the output was removed in"
            }
          },
          "additionalProperties": true
        }
      }
    },
    "since": {
      "type": "string",
      "description": "The version of Minecraft that the action was added in"
    },
    "until": {
      "type": "string",
      "description": "The version of Minecraft that the action was removed in"
    }
  },
  "required": [
    "name",
    "description",
    "executable",
    "expectable",
    "requireable"
  ],
  "additionalProperties": false
}
