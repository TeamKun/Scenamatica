{
  "name": "player_animation",
  "description": "プレイヤのアニメーションを再生します。",
  "base": "player_$base",
  "events": [
    "org.bukkit.event.player.PlayerAnimationEvent"
  ],

  "executable": "プレイヤにアニメーションを再生させます。",
  "watchable": "プレイヤがアニメーションを再生するか期待します。",
  "requireable": false,

  "arguments": {
    "type": {
      "type": "string",
      "description": "再生するアニメーションの種類です。",
      "enum": [
        "ARM_SWING"
      ],
      "requiredOn": ["execute"]
    }
  },
  "outputs": {
    "type": {
      "type": "string",
      "description": "再生するアニメーションの種類です。",
      "enum": [
        "ARM_SWING"
      ]
    }
  }
}
